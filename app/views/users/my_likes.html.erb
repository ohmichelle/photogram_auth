<div class="page-header">
  <h3><%= current_user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photos</th>
      </tr>

      <% Photo.where({:user_id => current_user.id}).each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><img src="<%= photo.image %>" width="48"></td>
        <td><%= photo.user_id %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
