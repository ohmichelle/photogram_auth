<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><a href="/photos/<%= photo.id %>">
          <img src="<%= photo.image %>" width="48"></a></td>
        <td><%= User.find_by({:id => photo.user_id}).username %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
