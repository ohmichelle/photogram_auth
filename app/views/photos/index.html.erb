<div class="page-header">
  <h1>
    <div class="btn-group btn-group-justified">
      <a href="/photos/new" class="btn btn-lg btn-default">+</a>
    </div>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">

      <% @photos.each do |photo| %>
      <tr>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h6><%= User.find_by({:id => photo.user_id}).username %>
            <small><%= time_ago_in_words(photo.created_at) %> ago</small></h6>
          </div>
          <div class="panel-body">
            <a href="/photos/<%= photo.id %>">
            <img src="<%= photo.image %>" class="img-responsive"></a>

            <ul class="media-list">
              <li class="media">
                <div class="media-left">
                </div>
                <div class="media-body">

                  <% @comments.each do |comment| %>
                  <h6 class="text-primary">
                    <a href="#"><%= User.find_by({:id => comment.user_id}).username %></a>
                    <small><%= time_ago_in_words(photo.created_at) %> ago</small></h6>
                    comment comment
                  <h6 class="text-primary">
                    <a href="#">username</a>
                    <small><%= time_ago_in_words(photo.created_at) %> ago</small></h6>
                    comment comment
                  <% end  %>

                </div>
              </li>
            </ul>

          </div>
        </div>

      </tr>
      <% end %>
    </table>
  </div>
</div>
